{% trans_default_domain 'FOSUserBundle' %}



<div class="side-div-side col-lg-6">
    <h1 class="list-header">Register</h1>
</div>
<div class="container-fluid">
    <div class="wrap_user_content">
    {% if form_errors(form.email) or form_errors(form.username) %}
        <div class="alert alert-danger" role="alert">
            {{ form_errors(form.email) }}
            {{ form_errors(form.username) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    {% endif %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="row registration-form">
            <fieldset class="form-group">
                <label for="email">Email address</label>
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':"Enter email"} }) }}
                <small class="text-muted">Won't be visible to anyone without your permission</small>
            </fieldset>
            <fieldset class="form-group">
                <label for="username">Name</label>
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder':"Enter name"} }) }}
                <small class="text-muted">This is how other people will see you</small>
            </fieldset>
            <fieldset class="form-group">
                <label for="password1">Password</label>
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':"Enter password"} }) }}
            </fieldset>
            <fieldset class="form-group">
                <label for="password2">Confirm password</label>
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':"Repeat password"} }) }}
            </fieldset>
            <div>
                <button type="submit" class="btn btn-success">Register</button>
                <a type="button" class="btn btn-danger pull-right" href="/">Cancel</a>
            </div>
        </div>
    {{ form_end(form) }}
    </div>
</div>
