<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('homepage') }}"><h3>REAL TRAVEL EXPERIENCE</h3></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">

            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                <ul class="nav navbar-nav navbar-right">
                    <li role="presentation" {% if app.request.pathinfo == '/blogpost/' %} class="active"{% endif %}><a href="{{ path('blogpost_index') }}" >Your Articles</a></li>
                    <li role="presentation" {% if app.request.pathinfo == '/blogpost/new' %} class="active"{% endif %}><a href="{{ path('blogpost_new') }}" >Upload</a></li>
                    {#<li class="text-center vertical-center">{{ app.user.username }}</li>#}
                    <li role="presentation"><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                </ul>
            {% else %}
                <ul class="nav navbar-nav navbar-right">
                    <li role="presentation" {% if app.request.pathinfo == '/login' %} class="active"{% endif %}><a href="{{ path('fos_user_security_login') }}">About</a></li>
                    <li role="presentation" {% if app.request.pathinfo == '/login' %} class="active"{% endif %}><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                    <li role="presentation" {% if app.request.pathinfo == '/register/' %} class="active"{% endif %}><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                </ul>
            {% endif %}
        </div>
    </div>
</nav>
